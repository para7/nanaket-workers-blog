{
	"name": "basic",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev",
		"build": "vite build --mode client && vite build",
		"preview": "wrangler dev",
		"deploy": "pnpm run build && wrangler deploy",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "wrangler d1 migrations apply nanaket-blog --local",
		"db:migrate:prod": "wrangler d1 migrations apply nanaket-blog --remote",
		"db:studio:local": "drizzle-kit studio --config drizzle.config.local.ts --port 3333 --verbose",
		"db:studio:prod": "drizzle-kit studio --config drizzle.config.ts --port 3333 --verbose",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"check": "biome check .",
		"check:fix": "biome check --write ."
	},
	"private": true,
	"dependencies": {
		"@picocss/pico": "^2.0.6",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.7",
		"honox": "^0.1.51",
		"marked": "^17.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@cloudflare/workers-types": "^4.20250214.0",
		"@hono/vite-build": "^1.3.0",
		"@hono/vite-dev-server": "^0.18.2",
		"@tailwindcss/vite": "^4.1.17",
		"@types/marked": "^6.0.0",
		"drizzle-kit": "^0.31.7",
		"gray-matter": "^4.0.3",
		"tailwindcss": "^4.1.17",
		"vite": "^6.3.5",
		"wrangler": "^4.4.0"
	}
}
